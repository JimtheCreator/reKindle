<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="front_page.KillerSwitchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/llak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/closepage"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_arrow_back_ios_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/helvetica_neue_bold"
                android:scrollbars="none"
                android:text="@string/kill_switch"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="15dp"
            android:background="@color/matteblack" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/phone_usage" />

                <LinearLayout
                    android:id="@+id/notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/helvetica_neue_bold"
                        android:text="Switch"
                        android:textColor="@color/white"
                        android:textSize="22sp" />


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/baseline_info_outline_24"
                        app:tint="@color/colorGrey" />

                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/killerswitchtoggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:textSize="11sp"
                    android:thumb="@drawable/statechecked"
                    app:showText="false"
                    app:track="@drawable/track" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/light"
                    android:gravity="center_horizontal"
                    android:text="@string/it_is_painful_to_limit_yourself_from_certain_apps_as_frustrating_it_may_be_you_still_have_to_do_what_s_right"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/theText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/regular"
                    android:text="@string/allow_the_following"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/kska"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/stroked_background"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/battery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/aiy6"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/baseline_battery_5_bar_24"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/aiy6"
                                android:fontFamily="@font/helvetica_neue_bold"
                                android:text="Battery Optimization"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end|center_vertical"
                                android:src="@drawable/baseline_arrow_forward_ios_24" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/light"
                            android:text="@string/do_not_optimize_this_helps_keep_the_app_running_in_the_background"
                            android:textColor="@color/thickGrey"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/bt0"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/lightBlack" />

                    <LinearLayout
                        android:id="@+id/lay_over"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/displayoverapps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/aiy3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/baseline_picture_in_picture_24"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/aiy3"
                                android:fontFamily="@font/helvetica_neue_bold"
                                android:text="@string/display_over_other_apps"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end|center_vertical"
                                android:src="@drawable/baseline_arrow_forward_ios_24" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/light"
                            android:text="@string/this_helps_the_app_to_prompt_you_when_you_ve_opened_a_blocked_app"
                            android:textColor="@color/thickGrey"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/bt1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/lightBlack" />

                    <LinearLayout
                        android:id="@+id/useraccess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/aiy4"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/usage_ic"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/aiy4"
                                android:fontFamily="@font/helvetica_neue_bold"
                                android:text="@string/usage_access"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end|center_vertical"
                                android:src="@drawable/baseline_arrow_forward_ios_24" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/light"
                            android:text="@string/helps_analyse_your_usage_of_apps_on_your_phone"
                            android:textColor="@color/thickGrey"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <View
                        android:id="@+id/bt2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/lightBlack" />

                    <LinearLayout
                        android:id="@+id/accessibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/aiy"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/baseline_settings_accessibility_24"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/aiy"
                                android:fontFamily="@font/helvetica_neue_bold"
                                android:text="@string/permit_accessibility"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end|center_vertical"
                                android:src="@drawable/baseline_arrow_forward_ios_24" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/light"
                            android:text="@string/allow_permission_to_accessibility_settings_this_will_help_the_app_track_what_app_you_re_using_to_prevent_you_from_opening_the_blocked_ones"
                            android:textColor="@color/thickGrey"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/oopp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/lightBlack"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/warning_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/aiy2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/autostart"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/aiy2"
                                android:fontFamily="@font/helvetica_neue_bold"
                                android:text="Auto-Start"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end|center_vertical"
                                android:src="@drawable/baseline_arrow_forward_ios_24" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/light"
                            android:text="Makes sure the app functions as intended with no interruptions from your system."
                            android:textColor="@color/thickGrey"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/spare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/spare_time_background"
                    android:visibility="gone">


                    <LinearLayout
                        android:id="@+id/photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sparetimerecyclerview"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <!--            <TextView-->
                        <!--                android:layout_width="wrap_content"-->
                        <!--                android:layout_height="wrap_content"-->
                        <!--                android:fontFamily="@font/sanfrans_regular"-->
                        <!--                android:text="Finding it hard, try"-->
                        <!--                android:textColor="@color/white"-->
                        <!--                android:textSize="15sp" />-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfrans_bold"
                                android:text="Spare Time"
                                android:textColor="@color/white"
                                android:textSize="24sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfrans_regular"
                                android:text="Unlock more Spare Time! Utilize this feature to reduce app usage."
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                        </LinearLayout>


                        <!--            <RelativeLayout-->
                        <!--                android:id="@+id/openYoutube"-->
                        <!--                android:layout_width="100dp"-->
                        <!--                android:layout_height="30dp"-->
                        <!--                android:layout_marginTop="15dp"-->
                        <!--                android:background="@drawable/drawable_shape">-->

                        <!--                <TextView-->
                        <!--                    android:layout_width="wrap_content"-->
                        <!--                    android:layout_height="wrap_content"-->
                        <!--                    android:layout_centerInParent="true"-->
                        <!--                    android:fontFamily="@font/sanfrans_regular"-->
                        <!--                    android:text="Open"-->
                        <!--                    android:textColor="@color/white"-->
                        <!--                    android:textSize="14sp" />-->


                        <!--            </RelativeLayout>-->


                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sparetimerecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp" />


                </RelativeLayout>




                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/vene"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanfrans_bold"
                        android:text="Intervene"
                        android:textColor="@color/white"
                        android:textSize="24sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanfrans_regular"
                        android:text="Get interrupted when using apps"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:background="@drawable/covertwo">


                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginStart="120dp"
                                android:background="@drawable/covertwo">


                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginStart="60dp"
                                android:background="@drawable/covertwo">

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/baseline_stop_circle_24" />

                            </RelativeLayout>


                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sanfrans_bold"
                            android:text="Strictness"
                            android:textColor="@color/white"
                            android:textSize="15sp" />


                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:max="100"
                            android:progress="20"
                            android:progressDrawable="@drawable/custom_progress" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/whichmore"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/morecorner">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="OPEN"
                            android:textColor="@color/white"
                            android:textSize="17sp" />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/idhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanfrans_bold"
                        android:text="Block Apps"
                        android:textColor="@color/white"
                        android:textSize="24sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanfrans_regular"
                        android:text="If you believe you can withstand it, proceed"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:overScrollMode="never"
                    android:scrollbars="vertical"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/loading_apps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="70dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="gone">


                    <ProgressBar
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:progressTint="@color/lightGreen" />

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginTop="15dp"-->
                    <!--                        android:fontFamily="@font/regular"-->
                    <!--                        android:text="Loading apps..."-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:textSize="15sp"-->
                    <!--                        tools:ignore="HardcodedText" />-->

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</RelativeLayout>