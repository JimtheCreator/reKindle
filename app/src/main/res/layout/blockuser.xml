<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/block"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_one"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/sad" />


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textDisclaimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="Nalo, we're sad to tell you this, but your access to reKindle has been blocked. Talk to Wire, he'll help you"
                android:fontFamily="@font/sanfrans_regular"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="19sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

<!--                <Button-->
<!--                    android:id="@+id/cancel_alert"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_margin="15dp"-->
<!--                    android:background="@color/invicibleColor"-->
<!--                    android:fontFamily="@font/sourcesanspro_bold"-->
<!--                    android:text="DENY"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="17sp" />-->

<!--                <View-->
<!--                    android:layout_width="1dp"-->
<!--                    android:layout_height="19dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:background="@color/thickGrey" />-->

                <Button
                    android:id="@+id/discard_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@color/invicibleColor"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:text="CLOSE"
                    android:textColor="@color/lightGreen"
                    android:textSize="17sp"
                    app:backgroundTint="@null" />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>